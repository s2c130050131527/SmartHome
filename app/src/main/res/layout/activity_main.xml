<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="raspi.alphabetagamma.smarthome.MainActivity">'

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:background="#16348e"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />


    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="360dp"

        android:longClickable="true"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="5dp"
        android:layout_below="@+id/my_toolbar"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/checkstatus"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="Refresh Status"
        android:background="@drawable/checkstatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="64dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkstatus"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="10dp"
        android:text="Smart Switch"
        android:theme="@style/ThemeOverlay.AppCompat.Light" />

</RelativeLayout>
